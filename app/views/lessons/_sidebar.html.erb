<div id="sidebar" class="left">
  <h2>You can do these next</h2>

  <% if @cando_lessons.blank? %>
  no lessons
  <% else %>
  <ul>
    <% @cando_lessons.each do |l| %>
    <li>
      <% if ("current" if l == @lesson) %>
      <span class="current"><%= l.name %></span>
      <% else %>
      <%= link_to l.name, l %>
      <% end %>
    </li>
    <% end %>
  </ul>
  <% end %>
</div>

<div id="sidebar" class="right">
  <h2>All lessons</h2>

  <% if @lessons.blank? %>
  no lessons
  <% else %>
  <ul>
    <% @lessons.each do |l| %>
    <li>
      <% if ("current" if l == @lesson) %>
      <span class="current"><%= l.name %></span>
      <% else %>
      <%= link_to l.name, l %>
      <% end %>
    </li>
    <% end %>
  </ul>
  <% end %>
</div>
