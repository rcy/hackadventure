<% form_for @lesson do |f| %>
<textfield class="lesson">
  <fieldset class="name">
    <%= f.label :name, 'Name:' %>
    <%= f.text_field :name %>
  </fieldset>

  <fieldset class="body">
    <%= f.label :body, 'Body:' %>
    <br>
    <%= f.text_area :body %>
  </fieldset>

  <fieldset class="dependencies">
    <%= f.label :deps, 'Dependencies (comma seperated):' %>
    <br>
    <%= f.text_field :deps %>
  </fieldset>

  <%= f.submit %>

</textfield>
<% end %>
