<% form_for @lesson do |f| %>
<textfield class="lesson">
  <fieldset class="name">
    <%= f.label :name, 'Name:' %>
    <%= f.text_field :name %>
  </fieldset>

  <fieldset class="title">
    <%= f.label :title, 'Title:' %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset class="dependencies">
    <%= f.label :pretty_dependencies, 'Dependencies (comma seperated):' %>
    <br>
    <%= f.text_field :pretty_dependencies %>
  </fieldset>

  <fieldset class="body">
    <%= f.label :body, 'Body:' %>
    <br>
    <%= f.text_area :body %>
  </fieldset>

  <fieldset class="published">
    <%= f.label :published, 'Published:' %>
    <%= f.check_box :published %>
  </fieldset>

  <%= f.submit %>

</textfield>
<% end %>
